{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:1420",
            "webRoot": "${workspaceFolder}/src",
            "sourceMaps": true,
            "preLaunchTask": "tauri: dev"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Tauri Development Debug",
            "cargo": {
                "args": [
                    "build",
                    "--manifest-path=./src-tauri/Cargo.toml",
                    "--no-default-features"
                ]
            },
            "task": "tauri: dev"
        }
    ]
}