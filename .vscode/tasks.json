{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "tauri: build:debug",
            "type": "shell",
            "command": "npm run tauri build -- --debug",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "tauri: dev",
            "type": "shell",
            "isBackground": true,
            "command": "npm run tauri dev",
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "[a-zA-Z]+ \\d+.\\d+.\\d+  [a-zA-Z]+",
                        "endsPattern": "Local:\\s+http://localhost:\\d+/"
                    }
                }
            ]
        }
    ]
}