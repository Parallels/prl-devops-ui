{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Parallels DevOps UI",
  "version": "0.1.0",
  "identifier": "com.parallels.devops-ui",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1421",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Parallels DevOps UI",
        "width": 1220,
        "height": 860,
        "resizable": true,
        "devtools": true
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "csp": "default-src 'self' ipc: http: https: ws: wss: data: blob: 'unsafe-inline' 'unsafe-eval'"
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "Developer ID Application: Parallels International GmbH (4C6364ACXT)",
      "hardenedRuntime": true,
      "minimumSystemVersion": "14.0",
      "entitlements": "entitlements.plist"
    }
  }
}